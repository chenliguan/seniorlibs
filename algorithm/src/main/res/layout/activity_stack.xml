<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/BaseMatchParent"
    android:orientation="vertical"
    tools:context=".main.MainActivity"
    tools:ignore="MissingDefaultResource">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="vertical">

        <Button
            android:id="@+id/btn_is_valid"
            style="@style/BtnStyles"
            android:text="20. 有效的括号" />

        <Button
            android:id="@+id/btn_min_stack"
            style="@style/BtnStyles"
            android:text="155. 最小栈" />

        <Button
            android:id="@+id/btn_eval_rpn"
            style="@style/BtnStyles"
            android:text="150. 逆波兰表达式求值" />

        <Button
            android:id="@+id/btn_remove_k_digits"
            style="@style/BtnStyles"
            android:text="402. 移掉K位数字" />

        <Button
            android:id="@+id/btn_daily_temperatures"
            style="@style/BtnStyles"
            android:text="739. 每日温度" />

        <Button
            android:id="@+id/btn_find_max"
            style="@style/BtnStyles"
            android:text="找到数组中, 比左边所有数字都小, 比右边所有数字都大的数字" />

        <Button
            android:id="@+id/btn_find_132_pattern"
            style="@style/BtnStyles"
            android:text="456. 132 模式" />

        <Button
            android:id="@+id/btn_next_greater_element"
            style="@style/BtnStyles"
            android:text="496. 下一个更大元素 1" />

        <Button
            android:id="@+id/btn_next_greater_element2"
            style="@style/BtnStyles"
            android:text="503. 下一个更大元素 2" />

    </LinearLayout>
</ScrollView>